@page
@model Rolix.Web.Pages.Account.IndexModel
@using Rolix.Web.Helpers
@{
    ViewData["Title"] = LocalizationHelper.Get("Account_PageTitle", HttpContext);
}

<link rel="stylesheet" href="~/css/account.css" />

@if (Model.IsAuthenticated)
{
    <div class="account-container">
        <div class="account-sidebar">
            <div class="account-avatar">
                <div class="avatar-circle">
                    <i class="bi bi-person-fill"></i>
                </div>
            </div>

            <nav class="account-menu">
                <a href="/Account" class="menu-item active">
                    <i class="bi bi-person"></i>
                    <span>@LocalizationHelper.Get("Account_MenuProfile", HttpContext)</span>
                </a>
                <a href="/Invoices" class="menu-item">
                    <i class="bi bi-receipt"></i>
                    <span>@LocalizationHelper.Get("Account_MenuInvoices", HttpContext)</span>
                </a>
                <a href="/Sav" class="menu-item">
                    <i class="bi bi-tools"></i>
                    <span>@LocalizationHelper.Get("Account_MenuSav", HttpContext)</span>
                </a>
                <a href="/Account?handler=Logout" class="menu-item logout">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>@LocalizationHelper.Get("Account_MenuLogout", HttpContext)</span>
                </a>
            </nav>
        </div>

        <div class="account-content">
            <div class="content-header">
                <h1>@LocalizationHelper.Get("Account_ProfileTitle", HttpContext)</h1>
                <p class="subtitle">@LocalizationHelper.Get("Account_ProfileSubtitle", HttpContext)</p>
            </div>

            @if (TempData["Success"] is string success)
            {
                <div class="alert alert-success">@success</div>
            }

            <div class="profile-info-card">
                <div class="profile-header">
                    <div>
                        <p class="profile-label">@LocalizationHelper.Get("Account_IdentifiedAs", HttpContext)</p>
                        <h2>@Model.ContactName</h2>
                        <p class="profile-email">@Model.ContactEmail</p>
                    </div>
                    <span class="member-badge">@LocalizationHelper.Get("Account_MemberBadge", HttpContext)</span>
                </div>
            </div>

            <div class="profile-form-card">
                <h3>@LocalizationHelper.Get("Account_MyInfo", HttpContext)</h3>
                <p class="form-description">@LocalizationHelper.Get("Account_UpdateInfo", HttpContext)</p>

                <form method="post" class="stacked-form" asp-page-handler="Update">
                    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                    <div class="form-group">
                        <label asp-for="Update.FullName">@LocalizationHelper.Get("Account_FullName", HttpContext)</label>
                        <input asp-for="Update.FullName" class="glass-input-clean" />
                        <span asp-validation-for="Update.FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Update.Email">@LocalizationHelper.Get("Account_ProfessionalEmail", HttpContext)</label>
                        <input asp-for="Update.Email" class="glass-input-clean" />
                        <span asp-validation-for="Update.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-primary-large">
                        <i class="bi bi-check-circle"></i> @LocalizationHelper.Get("Account_SaveChanges", HttpContext)
                    </button>
                </form>
            </div>

            <div class="quick-links-grid">
                <div class="quick-link-card">
                    <i class="bi bi-receipt" style="font-size: 2rem; color: var(--accent-gold); margin-bottom: 1rem;"></i>
                    <h3>@LocalizationHelper.Get("Account_QuickInvoices", HttpContext)</h3>
                    <p>@LocalizationHelper.Get("Account_QuickInvoicesDesc", HttpContext)</p>
                    <a asp-page="/Invoices/Index" class="btn-link">@LocalizationHelper.Get("Account_QuickInvoicesLink", HttpContext) →</a>
                </div>

                <div class="quick-link-card">
                    <i class="bi bi-tools" style="font-size: 2rem; color: var(--accent-gold); margin-bottom: 1rem;"></i>
                    <h3>@LocalizationHelper.Get("Account_QuickSav", HttpContext)</h3>
                    <p>@LocalizationHelper.Get("Account_QuickSavDesc", HttpContext)</p>
                    <a asp-page="/Sav/Index" class="btn-link">@LocalizationHelper.Get("Account_QuickSavLink", HttpContext) →</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="login-wrapper">
        <div class="login-container">
            <div class="login-header">
                <p class="eyebrow">@LocalizationHelper.Get("Account_PageTitle", HttpContext)</p>
                <h1>@LocalizationHelper.Get("Account_LoginTitle", HttpContext)</h1>
                <p class="lead">@LocalizationHelper.Get("Account_LoginSubtitle", HttpContext)</p>
            </div>

            @if (TempData["Success"] is string success)
            {
                <div class="alert alert-success">@success</div>
            }

            <div class="login-grid">
                <div class="login-card">
                    <div class="card-header">
                        <h2>@LocalizationHelper.Get("Account_LoginHeader", HttpContext)</h2>
                        <p>@LocalizationHelper.Get("Account_LoginDesc", HttpContext)</p>
                    </div>

                    <form method="post" class="stacked-form" asp-page-handler="Login">
                        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input.Username">@LocalizationHelper.Get("Account_Username", HttpContext)</label>
                            <input asp-for="Input.Username" class="glass-input-clean" placeholder="ex: j.doe" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password">@LocalizationHelper.Get("Account_Password", HttpContext)</label>
                            <input asp-for="Input.Password" class="glass-input-clean" type="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <button type="submit" class="btn-primary-large">@LocalizationHelper.Get("Account_LoginBtn", HttpContext)</button>
                    </form>
                </div>

                <div class="login-card">
                    <div class="card-header">
                        <h2>@LocalizationHelper.Get("Account_RegisterHeader", HttpContext)</h2>
                        <p>@LocalizationHelper.Get("Account_RegisterDesc", HttpContext)</p>
                    </div>

                    <form method="post" class="stacked-form" asp-page-handler="Register">
                        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Register.FullName">@LocalizationHelper.Get("Account_FullName", HttpContext)</label>
                            <input asp-for="Register.FullName" class="glass-input-clean" placeholder="Prénom Nom" />
                            <span asp-validation-for="Register.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Register.Email">@LocalizationHelper.Get("Contact_Email", HttpContext)</label>
                            <input asp-for="Register.Email" class="glass-input-clean" placeholder="email@exemple.com" />
                            <span asp-validation-for="Register.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Register.Username">@LocalizationHelper.Get("Account_RegisterUsername", HttpContext)</label>
                            <input asp-for="Register.Username" class="glass-input-clean" />
                            <span asp-validation-for="Register.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Register.Password">@LocalizationHelper.Get("Account_Password", HttpContext)</label>
                            <input asp-for="Register.Password" class="glass-input-clean" type="password" />
                            <span asp-validation-for="Register.Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn-secondary-glass" style="width: 100%; justify-content: center;">@LocalizationHelper.Get("Account_RegisterBtn", HttpContext)</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<style>
/* Styles pour la page connectée */
.profile-info-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.profile-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.profile-label {
    font-size: 0.8rem;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.5rem;
    letter-spacing: 1.5px;
}

.profile-header h2 {
    font-size: 2rem;
    color: #fff;
    margin: 0 0 0.5rem 0;
    font-family: 'Playfair Display', serif;
}

.profile-email {
    color: var(--accent-gold);
    font-size: 1.1rem;
}

.member-badge {
    padding: 8px 16px;
    border: 1px solid var(--accent-gold);
    color: var(--accent-gold);
    border-radius: 50px;
    background: rgba(212, 175, 55, 0.05);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
}

.profile-form-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.profile-form-card h3 {
    font-size: 1.5rem;
    color: #fff;
    margin-bottom: 0.5rem;
}

.form-description {
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 1.5rem;
}

.quick-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
}

.quick-link-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
}

.quick-link-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(212, 175, 55, 0.3);
    transform: translateY(-5px);
}

.quick-link-card h3 {
    font-size: 1.2rem;
    color: #fff;
    margin-bottom: 0.5rem;
}

.quick-link-card p {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
    margin-bottom: 1rem;
}

.btn-link {
    color: var(--accent-gold);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
}

.btn-link:hover {
    text-decoration: underline;
}

/* Styles pour la page non connectée */
.login-wrapper {
    max-width: 1200px;
    margin: 80px auto;
    padding: 0 20px;
}

.login-container {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 40px;
}

.login-header {
    text-align: center;
    margin-bottom: 40px;
}

.eyebrow {
    color: var(--accent-gold);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 10px;
    font-size: 0.9rem;
}

.login-header h1 {
    font-size: 3rem;
    margin-bottom: 10px;
    font-family: 'Playfair Display', serif;
}

.lead {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1.1rem;
}

.login-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 40px;
}

.login-card {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 30px;
}

.card-header {
    margin-bottom: 25px;
}

.card-header h2 {
    font-size: 1.8rem;
    color: #fff;
    margin-bottom: 10px;
}

.card-header p {
    color: rgba(255, 255, 255, 0.6);
}

.alert {
    padding: 1rem 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
}

.alert-success {
    background: rgba(76, 175, 80, 0.1);
    border: 1px solid rgba(76, 175, 80, 0.3);
    color: #4CAF50;
}

.alert-danger {
    background: rgba(244, 67, 54, 0.1);
    border: 1px solid rgba(244, 67, 54, 0.3);
    color: #f44336;
}


@@media (max-width: 900px) {
    .login-grid {
        grid-template-columns: 1fr;
    }
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}