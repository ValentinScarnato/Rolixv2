@page
@model Rolix.Web.Pages.ContactModel
@using Rolix.Web.Helpers
@{
    ViewData["Title"] = "Service Clientèle";
}

<section class="hero-section contact-hero">
    <div class="ambient-light light-1"></div>
    <div class="ambient-light light-2"></div>

    <div class="hero-content">
        <span class="since-badge fade-in-up">@LocalizationHelper.Get("Contact_Title", HttpContext)</span>
        <h1 class="hero-title fade-in-up delay-200">@LocalizationHelper.Get("Contact_HeroTitle", HttpContext)</h1>
        <p class="hero-subtitle fade-in-up delay-400">
            @LocalizationHelper.Get("Contact_HeroSubtitle", HttpContext)
        </p>

        <div class="contact-quick-actions fade-in-up delay-600">
            <a class="btn-secondary-glass" href="mailto:service@rolix.com">@LocalizationHelper.Get("Contact_EmailAction", HttpContext)</a>
            <a class="btn-primary" href="#contact-form">@LocalizationHelper.Get("Contact_FormAction", HttpContext)</a>
        </div>
    </div>
</section>

<section class="contact-section">
    <div class="main-container">
        <div class="contact-grid">

            <div class="contact-card info-card fade-in-up delay-600">
                <div class="contact-card-header">
                    <h3>@LocalizationHelper.Get("Contact_StoreTitle", HttpContext)</h3>
                    <div class="contact-divider"></div>
                </div>

                <div class="contact-item">
                    <span class="contact-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 22s7-4.5 7-12a7 7 0 1 0-14 0c0 7.5 7 12 7 12Z" stroke="currentColor" stroke-width="1.6" />
                            <path d="M12 13.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Z" stroke="currentColor" stroke-width="1.6" />
                        </svg>
                    </span>
                    <div>
                        <strong>Flagship Store</strong>
                        <p>123 Avenue de l'Horlogerie<br>1204 Genève, Suisse</p>
                    </div>
                </div>

                <div class="contact-item">
                    <span class="contact-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M7 4h3l2 5-2 1c1 2.5 3.5 5 6 6l1-2 5 2v3c0 1-1 2-2 2-9 0-16-7-16-16 0-1 1-2 2-2Z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round" />
                        </svg>
                    </span>
                    <div>
                        <strong>@LocalizationHelper.Get("Contact_Phone", HttpContext)</strong>
                        <p>+41 22 555 01 02</p>
                        <span class="sub-text">Du lundi au samedi, 10h - 19h</span>
                    </div>
                </div>

                <div class="contact-item">
                    <span class="contact-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 7.5 12 13l8-5.5" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M4 7.5V18a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M6 6h12" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" />
                        </svg>
                    </span>
                    <div>
                        <strong>@LocalizationHelper.Get("Contact_Service", HttpContext)</strong>
                        <p>service@rolix.com</p>
                    </div>
                </div>

                <div class="contact-highlight">
                    <div class="contact-highlight-title">@LocalizationHelper.Get("Contact_PrivateAppointment", HttpContext)</div>
                    <div class="contact-highlight-subtitle">@LocalizationHelper.Get("Contact_PrivateAppointmentDesc", HttpContext)</div>
                </div>

                <a class="contact-map" href="https://www.google.com/maps" target="_blank" rel="noreferrer">
                    @LocalizationHelper.Get("Contact_ViewOnMap", HttpContext)
                </a>
            </div>

            <div id="contact-form" class="contact-card form-card fade-in-up delay-600">
                <div class="contact-card-header">
                    <h3>@LocalizationHelper.Get("Contact_FormTitle", HttpContext)</h3>
                    <div class="contact-divider"></div>
                </div>

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success" style="background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.3); color: #22c55e; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
                        @Model.SuccessMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-error" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3); color: #ef4444; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
                        @Model.ErrorMessage
                    </div>
                }

                <form class="luxury-form" method="post">

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FirstName">@LocalizationHelper.Get("Contact_FirstName", HttpContext)</label>
                            <input asp-for="FirstName" type="text" class="glass-input-clean" placeholder="@LocalizationHelper.Get("Contact_FirstName", HttpContext)">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">@LocalizationHelper.Get("Contact_LastName", HttpContext)</label>
                            <input asp-for="LastName" type="text" class="glass-input-clean" placeholder="@LocalizationHelper.Get("Contact_LastName", HttpContext)">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">@LocalizationHelper.Get("Contact_Email", HttpContext)</label>
                        <input asp-for="Email" type="email" class="glass-input-clean" placeholder="votre@email.com">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Subject">@LocalizationHelper.Get("Contact_Subject", HttpContext)</label>
                        <select asp-for="Subject" class="glass-select-clean">
                            <option value="">@LocalizationHelper.Get("Contact_SubjectPlaceholder", HttpContext)</option>
                            <option value="Demande d'information">Demande d'information</option>
                            <option value="Service Après-Vente">Service Après-Vente</option>
                            <option value="Prendre Rendez-vous">Prendre Rendez-vous</option>
                            <option value="Presse & Partenariat">Presse & Partenariat</option>
                        </select>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Message">@LocalizationHelper.Get("Contact_Message", HttpContext)</label>
                        <textarea asp-for="Message" class="glass-input-clean" rows="5" placeholder="@LocalizationHelper.Get("Contact_Message", HttpContext)..."></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-primary-large">
                        @LocalizationHelper.Get("Contact_Send", HttpContext)
                    </button>

                    <div class="contact-disclaimer">
                        @LocalizationHelper.Get("Contact_Disclaimer", HttpContext)
                    </div>

                </form>
            </div>

        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const elements = document.querySelectorAll('.fade-in-up');
        elements.forEach(el => el.style.animationPlayState = 'running');
    });
</script>