@page
@{
    ViewData["Title"] = "Service Clientèle";
}

<div style="text-align: center; padding: 80px 20px 40px;">
    <span class="since-badge fade-in-up">Rolix Genève</span>
    <h1 class="hero-title fade-in-up delay-200" style="font-size: 3.5rem; margin-top: 20px;">Conciergerie</h1>
    <p class="fade-in-up delay-400" style="color: var(--text-secondary); max-width: 500px; margin: 0 auto;">
        Nos ambassadeurs sont à votre entière disposition pour vous guider dans l'acquisition ou l'entretien de votre garde-temps.
    </p>
</div>

<div class="main-container">
    <div class="contact-grid">

        <div class="contact-card info-card fade-in-up delay-600">
            <h3>La Boutique</h3>
            <div class="contact-divider"></div>

            <div class="contact-item">
                <span class="icon">📍</span>
                <div>
                    <strong>Flagship Store</strong>
                    <p>123 Avenue de l'Horlogerie<br>1204 Geneviève, Suisse</p>
                </div>
            </div>

            <div class="contact-item">
                <span class="icon">📞</span>
                <div>
                    <strong>Téléphone</strong>
                    <p>+41 22 555 01 02</p>
                    <span class="sub-text">Du lundi au samedi, 10h - 19h</span>
                </div>
            </div>

            <div class="contact-item">
                <span class="icon">✉️</span>
                <div>
                    <strong>Service Client</strong>
                    <p>service@rolix.com</p>
                </div>
            </div>

            <div class="map-placeholder">
                <span>Voir sur la carte</span>
            </div>
        </div>

        <div class="contact-card form-card fade-in-up delay-600">
            <h3>Envoyez-nous une demande</h3>

            <form class="luxury-form">

                <div class="form-row">
                    <div class="form-group">
                        <label>Prénom</label>
                        <input type="text" class="glass-input-clean" placeholder="Votre prénom">
                    </div>
                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" class="glass-input-clean" placeholder="Votre nom">
                    </div>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="glass-input-clean" placeholder="votre@email.com">
                </div>

                <div class="form-group">
                    <label>Sujet</label>
                    <select class="glass-select-clean" style="width: 100%;">
                        <option>Demande d'information</option>
                        <option>Service Après-Vente</option>
                        <option>Prendre Rendez-vous</option>
                        <option>Presse & Partenariat</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Message</label>
                    <textarea class="glass-input-clean" rows="4" placeholder="Comment pouvons-nous vous aider ?"></textarea>
                </div>

                <button type="submit" class="btn-primary-large" style="margin-top: 20px;">
                    Envoyer le message
                </button>

            </form>
        </div>

    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const elements = document.querySelectorAll('.fade-in-up');
        elements.forEach(el => el.style.animationPlayState = 'running');
    });
</script>