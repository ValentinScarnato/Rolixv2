@page
@model Rolix.Web.Pages.IndexModel
@using Rolix.Web.Helpers
@{
    ViewData["Title"] = "Rolix - L'Excellence Horlogère";
    var currency = HttpContext.Session.GetString(Rolix.Web.Models.SessionKeys.Currency) ?? "CHF";
}

<!-- Edit Mode Toggle Button (Directors Only) -->
@if (Model.IsDirector)
{
    <button id="editToggleBtn" class="edit-toggle-btn" onclick="toggleEditMode()">
