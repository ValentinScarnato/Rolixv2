            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
        </svg>
        <span id="editBtnText">@LocalizationHelper.Get("Common_Edit", HttpContext)</span>
    </button>
}

