                    @LocalizationHelper.Get("Home_ViewCollection", HttpContext)
                </a>
                <a href="#maison" class="btn-secondary-glass">
                    @LocalizationHelper.Get("Home_OurHistory", HttpContext)
                </a>
            </div>

            <div class="scroll-indicator fade-in-up delay-600">
