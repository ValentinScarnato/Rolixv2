            </div>
        </div>
    </div>


    <div class="main-container" style="padding-top: 0;">
        <section class="gallery-section reveal-on-scroll" style="margin-top: 100px;">
            <span class="since-badge" style="margin-bottom: 20px; display:inline-block;">@LocalizationHelper.Get("Home_HauteHorlogerie", HttpContext)</span>
