    <!-- Edit Mode Controls -->
    @if (Model.IsDirector)
    {
        <div id="editControls" class="edit-controls" style="display:none;">
            <button type="submit" class="btn-save" asp-page-handler="Save">Enregistrer</button>
            <button type="button" class="btn-cancel" onclick="cancelEdit()">Annuler</button>
        </div>
    }
</form>

<script>
    let isEditMode = false;

    document.addEventListener("DOMContentLoaded", function() {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.reveal-on-scroll').forEach(el => observer.observe(el));

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });

    function toggleEditMode() {
        isEditMode = !isEditMode;
        const editBtn = document.getElementById('editToggleBtn');
        const editBtnText = document.getElementById('editBtnText');
        const editControls = document.getElementById('editControls');
        const editableFields = document.querySelectorAll('.editable-field');

        if (isEditMode) {
            editBtn.classList.add('active');
            editBtnText.textContent = 'Mode édition';
            editControls.style.display = 'flex';
            
            editableFields.forEach(field => {
                field.classList.add('editing');
                const viewMode = field.querySelector('.view-mode');
                const editMode = field.querySelector('.edit-mode');
                if (viewMode) viewMode.style.display = 'none';
                if (editMode) {
                    editMode.style.display = 'block';
                    // Copy content from view to edit if empty
                    if (!editMode.value && viewMode) {
                        editMode.value = viewMode.textContent.trim().replace('— ', '');
                    }
                }
            });
        } else {
            editBtn.classList.remove('active');
            editBtnText.textContent = 'Modifier';
            editControls.style.display = 'none';
            
            editableFields.forEach(field => {
                field.classList.remove('editing');
                const viewMode = field.querySelector('.view-mode');
                const editMode = field.querySelector('.edit-mode');
                if (viewMode) viewMode.style.display = '';
                if (editMode) editMode.style.display = 'none';
            });
        }
    }

    function cancelEdit() {
        if (confirm('Voulez-vous vraiment annuler les modifications ?')) {
            location.reload();
        }
    }
</script>

<style>
    /* Edit Toggle Button */
    .edit-toggle-btn {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background: linear-gradient(135deg, #d4af37 0%, #f4e5b8 100%);
        color: #0a0a0a;
        border: none;
        border-radius: 50px;
        padding: 15px 25px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 4px 20px rgba(212, 175, 55, 0.3);
        transition: all 0.3s ease;
        z-index: 1000;
    }

    .edit-toggle-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 25px rgba(212, 175, 55, 0.5);
    }

    .edit-toggle-btn.active {
        background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
        color: white;
    }

    /* Edit Controls */
    .edit-controls {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 15px;
        z-index: 1000;
    }

    .btn-save, .btn-cancel {
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-save {
        background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
        color: white;
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.4);
    }

    .btn-cancel {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.15);
    }

    /* Editable Fields */
    .editable-field.editing {
        position: relative;
        padding: 10px;
        border-radius: 8px;
        background: rgba(212, 175, 55, 0.1);
        border: 2px dashed rgba(212, 175, 55, 0.3);
        transition: all 0.3s ease;
    }

    .editable-field.editing:hover {
        background: rgba(212, 175, 55, 0.15);
        border-color: rgba(212, 175, 55, 0.5);
    }

    .edit-mode {
        width: 100%;
        background: rgba(10, 10, 10, 0.8);
        border: 1px solid rgba(212, 175, 55, 0.3);
        border-radius: 6px;
        padding: 12px;
        color: white;
        font-family: inherit;
        font-size: inherit;
        line-height: inherit;
        resize: vertical;
    }

    .edit-mode:focus {
        outline: none;
        border-color: #d4af37;
        box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
    }

    textarea.edit-mode {
        min-height: 100px;
    }

    h1 textarea.edit-mode {
        font-size: inherit;
        font-weight: inherit;
        text-align: center;
    }

    h2 input.edit-mode, h3 textarea.edit-mode {
        font-size: inherit;
        font-weight: inherit;
    }
</style>